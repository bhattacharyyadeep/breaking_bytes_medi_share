<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
  android:background="@drawable/back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:id="@+id/layout_1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Welcome to Medi Share"
            android:textAlignment="center"
            android:id="@+id/welcome"
            android:textColor="@color/white"
            android:layout_margin="20dp"

            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@+id/layout_1"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="image1"
            android:padding="5dp"
            android:src="@drawable/check"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:text="Checkout Your Health"
                android:textSize="20dp"
                android:id="@+id/text1"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:layout_marginStart="2dp"
            android:id="@+id/button2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:padding="5dp"
            android:onClick="image2"
            android:src="@drawable/expert" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="Expert Analysis"
            android:textSize="20dp"
            android:id="@+id/text2"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            tools:ignore="DuplicateIds" />

        <ImageButton
        android:layout_width="match_parent"
        android:layout_height="161dp"
            android:padding="5dp"
            android:id="@+id/button3"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="image3"
            android:src="@drawable/open"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="Open Forum"
            android:textSize="20dp"
            android:id="@+id/text3"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>